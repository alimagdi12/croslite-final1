<%- include('../includes/head.ejs')%>
<link rel="stylesheet" href="/footer.css">
<link rel="stylesheet" href="/nav.css">
<link rel="stylesheet" href="/css/product-details.css">
<style>
    nav .header .login{
        position: absolute;
        right: 2%;
        text-decoration: none;
        color: white;
        top: 25%;
}
</style>


<% if (isAuthenticated) { %>
    <style>
        nav .menu{
        position: relative;
        width: 900px;
        height: 100%;
        left: 100px;
    }
    
        nav .body ul a{
        position: relative;
        color: black;
        padding: 4px;
        border-radius: 6px;
        font-family: 'Roboto', sans-serif;
        font-size: 16px;
        font-weight: 300;
        cursor: pointer;
        text-transform: capitalize;
        margin-right: 10px;
    }
    nav .body ul a:before{
        position: absolute;
        content: '';
        left: 0;
        bottom: 0;
        height: 2px;
        width: 100%;
        background: white;
        transform: scaleX(0);
        transform-origin: right;
        transition: transform .4s linear ;
    }
    nav .body ul a:hover:before{
        transform: scaleX(1);
        transform-origin: left;
        
    
    }
    
    nav .body  form button{
        background-color: transparent;
        border: none;
        color: white;
        font-size: 16px;
    }
    </style>
    <%}%>
    

</head>
<body>
    <%- include('../includes/navigation.ejs')%>






<div class="cards">
    <% if (prods.length > 0) { %>
        <% for (let product of prods) { %>
    <div class="card">
        <h2><%= product.title %></h2>
        <img src="/<%= product.imageUrlFront %>" alt="" class="img-back">
        <img src="/<%= product.imageUrlBack %>" alt="" class="img-front">
        <h2><%= product.price %></h2>
        <p><%= product.description %></p>
        <p><%= product.details %></p>
        <div class="buttons">
            <a href="/admin/edit-product/<%= product._id %>?edit=true" class="btn">Edit</a>
            <form action="/admin/delete-product" method="POST">
                <input type="hidden" value="<%= product._id %>" name="productId">
                <button class="btn" type="submit">Delete</button>
                <input type="hidden" name="_csrf" value="<%= csrfToken%>">

            </form>
        </div>
    </div>
    <% } %>
    <% } else { %>
        <h1>No Products Found!</h1>
        <% } %>
</div>
    



            
